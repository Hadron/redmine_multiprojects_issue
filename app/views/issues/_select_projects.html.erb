<p id="projects_form">
  <% select_options = project_tree_options_for_select(@issue.allowed_target_projects|[@issue.project]|@issue.projects, :selected => [@issue.project]|@issue.projects) %>
  <%= f.select :project_ids, select_options, {:required => true, :label => l("concerned_projects")},
               {:multiple => true, :size => 10, style: "display:none;"} %>
  <%= render 'projects_list' %>
  <br/>
  <%= link_to l("modify_projects"), plugin_multiprojects_issue_load_projects_selection_path(:issue_id => @issue.id, :project_id => @issue.project.id), remote: true, id: "loadModalProjectsSelection" %>
</p>
